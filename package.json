{
  "name": "c-w.github.io",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "reload --browser",
    "prestart": "npm-run-all build.previews build.chart",
    "prebuild": "mkdirp build",
    "build.previews": "node .travis/fetch-previews.js --if-missing",
    "build.chart": "node .travis/fetch-github-chart.js --if-missing",
    "build.concat": "html-inline -i index.html -o build/index.concat.html --ignore-images --ignore-links",
    "build.minify.html": "html-minifier build/index.concat.html -o build/index.html --collapse-whitespace --minify-css true --minify-js true",
    "build.minify.css": "csso -i conway.css -o build/conway.css",
    "build.minify": "npm-run-all build.minify.css build.minify.css",
    "build": "npm-run-all build.concat build.minify",
    "lint.html": "htmllint index.html",
    "lint.xhtml": "html-validator --format=xhtml --quiet --file=index.html",
    "lint.js": "eslint *.js",
    "lint.css": "stylelint *.css",
    "lint": "npm-run-all lint.html lint.xhtml lint.js lint.css"
  },
  "devDependencies": {
    "cheerio": "^1.0.0-rc.2",
    "csso-cli": "^2.0.2",
    "eslint": "^5.12.0",
    "eslint-plugin-html": "^5.0.0",
    "fs-extra": "^7.0.1",
    "html-inline": "^1.2.0",
    "html-minifier": "^3.5.21",
    "html-validator-cli": "^4.1.4",
    "htmllint-cli": "0.0.7",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "reload": "^2.4.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0"
  }
}
